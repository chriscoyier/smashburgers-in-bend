---
import { getEntry } from "astro:content";

import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const posts = await Astro.glob("../../content/burgers/*.md");

  return posts.map((post) => ({
    params: {
      slug: post.frontmatter.slug,
    },
    props: {
      post,
    },
  }));
}

const { slug } = Astro.params;

// Feels weird to have to load all these image rather than just the one we need.
import burgerAmericanaImg from "../../images/burgers/americana.jpg";
import burgerBlueeyesImg from "../../images/burgers/blueeyes.jpg";
import burgerWillieburgerImg from "../../images/burgers/willieburger.jpg";
import burgerMidCityImg from "../../images/burgers/midcity.jpg";

let img;
if (slug === "americana") {
  img = burgerAmericanaImg;
} else if (slug === "blueeyes") {
  img = burgerBlueeyesImg;
} else if (slug === "willieburger") {
  img = burgerWillieburgerImg;
} else if (slug === "midcity") {
  img = burgerMidCityImg;
}

const post = await getEntry("burgers", slug);

const url = new URL(post.data.website);
---

<Layout title={`${post.data.restaurant} | Smashburgers in Bend`}>
  <main transition:name={`burger-${slug}`}>
    <Image
      src={img}
      alt={`Photograph of burger from ${post.data.restaurant}`}
      class="img"
      transition:name={`burger-image-${slug}`}
    />

    <a class="back" href="/">&larr; Smashburgers in Bend</a>
    <h1 transition:name={`title-${slug}`}>{post.data.restaurant}</h1>

    <div class="content">
      <dl class="metadata">
        <div>
          <dt><span aria-label="Website">üîó</span></dt>
          <dd><a href={url}>{url.host}</a></dd>
        </div>

        <div>
          <dt><span aria-label="Location">üìç</span></dt>
          <dd>{post.data.location}</dd>
        </div>
      </dl>

      <Astro.props.post.Content />
    </div>
  </main>
</Layout>

<style lang="scss">
  .back {
    opacity: 0.66;
    text-decoration: none;
    text-transform: uppercase;
    &:hover,
    &:focus {
      opacity: 1;
    }
  }
  main {
    padding: 2rem;
    margin-block-end: 10rem;
  }
  img {
    pointer-events: none;
    position: fixed;
    bottom: 0;
    right: 0;
    width: 100vw;
    max-width: 1000px;
    -webkit-mask-image: radial-gradient(
      ellipse 100% 90% at 100% 85%,
      black 40%,
      transparent 100%
    );
  }
  h1 {
    font-weight: 900;
    font-size: var(--font-size-xxxl);
    margin: 0 0 2rem 0;
  }

  .metadata {
    > div {
      display: grid;
      grid-template-columns: 2ch 1fr;
      margin-block-end: 0.5rem;
    }
    dd {
      margin: 0;
    }
  }

  .content {
    max-width: 36ch;
    line-height: 1.5;
  }
</style>
